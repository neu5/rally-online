{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/refactor.ts"
  ]
}